<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/small_margin"
    android:elevation="@dimen/smaller_margin"
    android:layout_margin="@dimen/small_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/smaller_margin"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/reminder_course_id_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_margin="@dimen/smallest_padding"
                android:fontFamily="sans-serif-condensed-medium"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#2B3D4D"/>
            <ImageView
                android:id="@+id/reminder_done_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:contentDescription="@string/image_to_check_if_schedule_is_done"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/smaller_margin"
            android:orientation="horizontal">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/smaller_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/reminder_course_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/smaller_margin"
                    android:fontFamily="sans-serif-condensed"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#AEB6BD"/>

                <TextView
                    android:id="@+id/reminder_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/smaller_margin"
                    android:fontFamily="sans-serif-condensed"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#391800"/>

                <TextView
                    android:id="@+id/reminder_loc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/smaller_margin"
                    android:fontFamily="sans-serif-condensed"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#0A599F"
                    android:drawablePadding="@dimen/smallest_padding"/>

            </LinearLayout>

            <TextView
                android:id="@+id/reminder_note_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/smallest_padding"
                android:fontFamily="sans-serif-thin"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#64E810"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/smaller_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reminder_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_calendar_today_24"
                android:textAppearance="?android:textAppearanceMediumInverse"
                android:textColor="#AEB6BD"
                android:fontFamily="sans-serif-condensed"
                android:layout_margin="@dimen/smaller_margin"/>

            <TextView
                android:id="@+id/reminder_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_clock"
                android:textAppearance="?android:textAppearanceMediumInverse"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#AEB6BD"
                android:layout_margin="@dimen/smaller_margin"/>
            <TextView
                android:id="@+id/reminder_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_repeat"
                android:fontFamily="sans-serif-condensed"
                android:textAppearance="?android:textAppearanceMediumInverse"
                android:textColor="#AEB6BD"
                android:layout_margin="8dp"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>